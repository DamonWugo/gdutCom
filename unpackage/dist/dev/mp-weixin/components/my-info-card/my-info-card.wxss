.my-info-container {
  box-sizing: border-box;
  background-color: #fff;
  width: 680rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0 30rpx;
}
.my-info-avatar-container {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
}
.my-info-avatar-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.my-info-name-container {
  color: #96e8ba;
  margin-bottom: 20rpx;
}
.my-info-introduce-container {
  margin-bottom: 30rpx;
  font-size: 22rpx;
}
.my-info-labal-container {
  margin-bottom: 30rpx;
  font-size: 22rpx;
  color: #96e8ba;
}
.my-info-labal-item {
  box-sizing: border-box;
  border: 2rpx solid #96e8ba;
  border-radius: 60rpx;
  padding: 3rpx 15rpx;
  margin-right: 20rpx;
}
.my-info-edit-container {
  border: 1rpx solid #ccc;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  font-size: 27rpx;
  padding: 10rpx 20rpx;
}