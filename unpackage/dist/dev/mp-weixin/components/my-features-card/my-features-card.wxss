.features-container {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  width: 660rpx;
  padding: 30rpx 30rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 10rpx 3rpx #dddddd;
}
.my-post-container {
  flex-shrink: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 55rpx 30rpx;
}
.my-post-container .my-post-name {
  margin-top: 10rpx;
  color: #4b4b4b;
  font-size: 23rpx;
}
.features-img {
  width: 60rpx;
  height: 60rpx;
